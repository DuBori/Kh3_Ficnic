<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 관리자 : 적립금 관련 -->
<mapper namespace="pointDAO">

    <!-- 적립금 목록 -->
    <select id="adminPointList" resultType="pointDTO">
    </select>


    <!-- 회원가입 포인트 적립 -->
	<insert id="joinPoint" parameterType="pointDTO">
		<selectKey resultType="int" keyProperty="point_no" order="BEFORE">
			select max(point_no) from member_point
		</selectKey>
		insert into member_point values(#{point_no} + 1, '', '',#{member_id}, default, 1000, '회원가입 축하 적립금 지급', sysdate)
    </insert>



</mapper>