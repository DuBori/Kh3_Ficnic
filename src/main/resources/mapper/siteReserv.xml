<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 사이트 : 예약 관련 -->
<mapper namespace="reservDAO">

    <!-- 예약 목록 -->
    <select id="siteReservList" resultType="reservDTO">
    
    </select>
	
	<!-- 검색 페이징 개수  -->
	<select id="siteReservCount" parameterType="map">
		select count(*) from reserv_list where reserv_no > 0
		<if test="member_id != ''">and member_id = #{member_id}</if>
		<if test="field"></if>
	</select>





</mapper>