<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 사이트 : 회원 관련 -->
<mapper namespace="memberDAO">

    <!-- 아이디 체크 로그인 -->
    <select id="siteMemberLogin" resultType="int">
    select count(*) 
	from member_list
	where member_id = #{member_id}
    </select>
    
    <!--비밀번호 체크 로그인 -->
    <select id="siteMemberLoginPw" resultType="int">
    select count(*) 
	from member_list
	where member_id = #{member_id} and member_pw = #{member_pw}
    </select>

    <!-- 회원 목록 -->
    <select id="siteMemberList" resultType="memberDTO">
    </select>

	<!-- 아이디 찾기 / 둘다 맞는 경우 -->
    <select id="siteMemberFindIdAll" resultType="int">
    select count(*) 
	from member_list
	where member_email = #{member_email} and member_name = #{member_name}
    </select>

	<!-- 아이디 찾기 / 이메일만 확인, 0으로 결과 나올 시 name이 틀림 -->
    <select id="siteMemberFindIdEmail" resultType="int">
    select count(*) 
	from member_list
	where member_email = #{member_email}
    </select>
    
    
    
    
    
    
    
<!--     비밀번호 찾기
    <select id="siteMemberfindPw" resultType="int">
    select count(*) 
	from member_list
	where member_id = #{member_id} and member_pw = #{member_pw}
    </select> -->



</mapper>